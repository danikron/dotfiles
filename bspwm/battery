#! /bin/zsh
battery -s | while read -r line ; do
	echo $line | { read char batt }
	if [[ $char == "Charging" || $char == "Full" ]]
	then
		echo "B\uf111 $batt%"
	elif [[ $char != "Charging" && $batt -ge 91 ]]
	then
		echo "B\uf113 $batt%"
	elif [[ $char != "Charging" && $batt -ge 51 ]]
	then
		echo "B\uf114  $batt%"
	elif [[ $char != "Charging" && $batt -ge 10 ]]
	then
		echo "B\uf115 $batt%"
	elif [[ $char != "Charging" && $batt -lt 10 ]]
	then
		echo "B\uf112 $batt%"
	fi
done > "$PANEL_FIFO" &
