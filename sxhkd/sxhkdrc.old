#
# bspwm hotkeys
#

super + alt + Escape
	pkill panel; \
	bspc quit

super + q
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

super + {_,shift + }f
	bspc window -t {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{Left,Down,Up,Right}
	bspc window -{f,s} {left,down,up,right}
	
super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

super + {_,shift + }c
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {Left,Down,Up,Right}
	bspc window -p {left,down,up,right}
	
super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

super + alt + {Left,Down,Up,Right}
	bspc window -e {left -10,down +10,up -10,right +10}
	
super + alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

super + alt + shift + {Left,Down,Up,Right}
	bspc window -e {right -10,up +10,down -10,left +10}
	
super + alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} focused:^{1-9,10}
#	bspc {desktop -f,window -d} ^{1-9,10}

#
# Mouse
#

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
  bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

super + r
  dmenu_run -nb '#1D1F21' -nf '#C5C8C6' -sb '#C5C6C8' -sf '#1D1F21' -fn 'Liberation Sans:style=bold:size=9' -p Run: -h 18 -x 106 -w 925 -i -q

super + BackSpace
	xdotool search --onlyvisible --classname scratchpad windowunmap \
	|| xdotool search --classname scratchpad windowmap \
	|| urxvt -name scratchpad -g 122x17-255-0 &

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# My binds
#

super + s
	bspc monitor -f next
	
super + shift + s
	bspc window -m next; \
	bspc monitor -f next

ctrl + alt + k
	/home/danikron/.kbswitch.sh; \
 	/home/danikron/.config/bspwm/kbstat.sh

ctrl + alt + l
	i3lock -n -u -c "#000000" -i '/home/danikron/.i3lock/archbleak.png'

super + e
	urxvt -e ranger

XF86AudioMute
	pulseaudio-ctl mute

XF86AudioRaiseVolume
	pulseaudio-ctl up

XF86AudioLowerVolume
	pulseaudio-ctl down
	
XF86AudioPlay
	cmus-remote -u; \
	playerctl play-pause

XF86AudioStop
	cmus-remote -s; \
	playerctl stop
	
XF86AudioNext
	cmus-remote -n; \
	playerctl next

XF86AudioPrev
	cmus-remote -r; \
	playerctl previous

XF86MonBrightnessUp
	xbacklight -inc 10

XF86MonBrightnessDown
	xbacklight -dec 10
