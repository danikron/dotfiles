#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt

super + KP_Enter
	urxvt

# program launcher
super + r
    rofi -show run -bw 1 -font "Liberation Sans Bold 9" -color-window "#1D1F21", "C5C8C6" -color-normal "#1D1F21","#C5C8C6","#1D1F21","#C5C8C6","#1D1F21" -hide-scrollbar -separator-style none -lines 8

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

#
# state/flags
#

# set the window state
super + {t,shift + t,f,shift + f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}.local

super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}.local

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {1-9,0}
	id=$(cat /tmp/scratchid);\
	focused=$(bspc query -N -n);\
	bspc desktop -f 'focused:^{1-9,10}';\
	if [[ $focused == $id ]];then bspc node -f $id;fi

super + shift + {1-9,0}
	bspc node -d 'focused:^{1-9,10}';\
	bspc desktop -f last

super + {F1,F2,F3,F4,F5,F6,F7,F8,F9,F10}
	bspc desktop -a 'next:^{1-9,10}'

super + shift + {F1,F2,F3,F4,F5,F6,F7,F8,F9,F10}
	bspc node -d 'next:^{1-9,10}';\
	bspc desktop -f last;\
	bspc desktop -a next:^$(bspc query -D next:focused -d last.local --names)

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

super + alt + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

super + alt + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# personal hotkeys
super + BackSpace
	id=$(cat /tmp/scratchid);\
	if [[ $id ]];then bspc node $id --flag hidden;bspc node -f $id;fi

super + shift + Return
	~/dotfiles/newterm.sh

super + shift + KP_Enter
	~/dotfiles/newterm.sh

super + {_,shift + }s
	id=$(cat /tmp/scratchid);\
	focused=$(bspc query -N -n);\
	{bspc monitor -f next,bspc node -m next};\
	if [[ $id ]];then bspc node $id --flag sticky=off;bspc node $id -m focused;bspc node $id --flag sticky=on;fi;\
	if [[ $focused == $id ]];then bspc node -f $id;fi

super + {_,shift + ,mode_switch + }d
	id=$(cat /tmp/scratchid);\
	read -r dir1 dir2 <<<$(echo {next.local prev.local,prev.local next.local,next:focused next:focused});\
	if [[ $id ]];then bspc node $id --flag sticky=off;fi;\
	name=$(bspc query -D -d $dir1 --names);\
	bspc desktop -s $dir1;\
	bspc desktop $dir2 -n $(bspc query -D -d --names);\
	bspc desktop -n $name;\
	if [[ $id ]];then bspc node $id --flag sticky=on;fi

super + {_,shift + }u
	bspc node -f next{.floating,.tiled}.local

ctrl + alt + l
	i3lock-fancy -gf Liberation-Sans -t ''

ctrl + alt + r
	~/dotfiles/redtoggle

super + e
	urxvt -e ranger

XF86Sleep
	systemctl suspend; \
	i3lock-fancy -gf Liberation-Sans -t ''

XF86AudioMute
	pactl set-sink-mute 0 toggle; \
	~/.config/bspwm/volume_push

XF86AudioRaiseVolume
	sh -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ +2%"; \
	~/.config/bspwm/volume_push

XF86AudioLowerVolume
	sh -c "pactl set-sink-mute @DEFAULT_SINK@ false ; pactl set-sink-volume @DEFAULT_SINK@ -2%"; \
	~/.config/bspwm/volume_push

XF86AudioPlay
	playerctl play-pause

XF86AudioStop
	playerctl stop

XF86AudioNext
	playerctl next

XF86AudioPrev
	playerctl previous

XF86MonBrightnessUp
	light -A 10

XF86MonBrightnessDown
	light -U 10
